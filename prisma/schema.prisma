generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  email          String?  @unique
  passwordHash   String
  city           String?
  country        String?
  bio            String
  createdAt      DateTime @default(now())
  doneOnboarding Boolean  @default(false)
  photo          Image?

  programmingLanguages UserProgrammingLanguage[]
  jobTitles            UserJobTitle[]
}

model Image {
  id       String  @id @default(cuid())
  url      String?
  publicId String?
  userId   String  @unique

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model JobTitle {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  users UserJobTitle[]
}

model UserJobTitle {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  jobTitle   JobTitle @relation(fields: [jobTitleId], references: [id])
  jobTitleId String

  @@unique([userId, jobTitleId])
}

model ProgrammingLanguage {
  id   String @id @default(cuid())
  name String @unique

  users UserProgrammingLanguage[]
}

model UserProgrammingLanguage {
  id                    String              @id @default(cuid())
  user                  User                @relation(fields: [userId], references: [id])
  userId                String
  programmingLanguage   ProgrammingLanguage @relation(fields: [programmingLanguageId], references: [id])
  programmingLanguageId String

  @@unique([userId, programmingLanguageId])
}
