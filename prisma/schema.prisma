generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  email          String?  @unique
  passwordHash   String
  city           String?
  country        String?
  bio            String
  createdAt      DateTime @default(now())
  doneOnboarding Boolean  @default(false)
  photo          Image?

  programmingLanguages UserProgrammingLanguage[]
  jobTitles            UserJobTitle[]

  outgoingSwipes Swipe[] @relation("OutgoingSwipes")
  incomingSwipes Swipe[] @relation("IncomingSwipes")

  matchesA Match[] @relation("MatchesA")
  matchesB Match[] @relation("MatchesB")

  conversationsA Conversation[] @relation("ConversationA")
  conversationsB Conversation[] @relation("ConversationB")
  sentMessages   Message[]
}

model Image {
  id       String  @id @default(cuid())
  url      String?
  publicId String?
  userId   String  @unique

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model JobTitle {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  users UserJobTitle[]
}

model UserJobTitle {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  jobTitle   JobTitle @relation(fields: [jobTitleId], references: [id])
  jobTitleId String

  @@unique([userId, jobTitleId])
}

model ProgrammingLanguage {
  id   String @id @default(cuid())
  name String @unique

  users UserProgrammingLanguage[]
}

model UserProgrammingLanguage {
  id                    String              @id @default(cuid())
  user                  User                @relation(fields: [userId], references: [id])
  userId                String
  programmingLanguage   ProgrammingLanguage @relation(fields: [programmingLanguageId], references: [id])
  programmingLanguageId String

  @@unique([userId, programmingLanguageId])
}

enum SwipeType {
  PASS
  LIKE
}

model Swipe {
  id String @id @default(cuid())

  from      User      @relation("OutgoingSwipes", fields: [fromId], references: [id], onDelete: Cascade)
  fromId    String
  to        User      @relation("IncomingSwipes", fields: [toId], references: [id], onDelete: Cascade)
  toId      String
  type      SwipeType
  createdAt DateTime  @default(now())

  @@unique([fromId, toId])
  @@index([toId, fromId])
}

model Match {
  id        String   @id @default(cuid())
  userA     User     @relation("MatchesA", fields: [userAId], references: [id], onDelete: Cascade)
  userAId   String
  userB     User     @relation("MatchesB", fields: [userBId], references: [id], onDelete: Cascade)
  userBId   String
  createdAt DateTime @default(now())

  conversations Conversation[]

  @@unique([userAId, userBId])
  @@index([userBId, userAId])
}

model Conversation {
  id        String   @id @default(cuid())
  userA     User     @relation("ConversationA", fields: [userAId], references: [id], onDelete: Cascade)
  userAId   String
  userB     User     @relation("ConversationB", fields: [userBId], references: [id], onDelete: Cascade)
  userBId   String
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  matchId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages Message[]

  @@unique([userAId, userBId])
  @@index([userBId, userAId])
  @@index([matchId])
}

model Message {
  id             String       @id @default(cuid())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String
  sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)
  senderId       String
  content        String
  createdAt      DateTime     @default(now())
  isRead         Boolean      @default(false)
  readAt         DateTime?

  @@index([conversationId, createdAt])
  @@index([senderId])
}
